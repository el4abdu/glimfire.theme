{% if cart.item_count > 0 %}
  <div class="cart-container">
    <h1>Your Cart</h1>
    
    <div class="cart-content">
      <div class="cart-items">
        {% for item in cart.items %}
          <div class="cart-item" data-item-id="{{ item.id }}">
            <div class="item-image">
              <img src="{{ item.image | img_url: '200x' }}" alt="{{ item.title }}">
            </div>
            
            <div class="item-details">
              <h2>{{ item.product.title }}</h2>
              {% if item.variant.title != 'Default Title' %}
                <p class="variant">{{ item.variant.title }}</p>
              {% endif %}
              
              <div class="item-controls">
                <div class="quantity-controls">
                  <button onclick="updateQuantity('{{ item.id }}', {{ item.quantity | minus: 1 }})">-</button>
                  <input type="number" 
                         value="{{ item.quantity }}" 
                         min="1" 
                         onchange="updateQuantity('{{ item.id }}', this.value)">
                  <button onclick="updateQuantity('{{ item.id }}', {{ item.quantity | plus: 1 }})">+</button>
                </div>
                
                <button class="remove-item" onclick="removeItem('{{ item.id }}')">
                  <span class="remove-icon">Ã—</span>
                  Remove
                </button>
              </div>
            </div>
            
            <div class="item-price">
              <p class="price">{{ item.final_line_price | money }}</p>
              {% if item.original_line_price > item.final_line_price %}
                <p class="original-price">{{ item.original_line_price | money }}</p>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
      
      <div class="cart-summary">
        <h2>Order Summary</h2>
        
        <div class="summary-details">
          <div class="summary-line">
            <span>Subtotal</span>
            <span>{{ cart.total_price | money }}</span>
          </div>
          
          {% if cart.total_discounts > 0 %}
            <div class="summary-line discount">
              <span>Discount</span>
              <span>-{{ cart.total_discounts | money }}</span>
            </div>
          {% endif %}
          
          <div class="summary-line shipping">
            <span>Shipping</span>
            <span>Calculated at checkout</span>
          </div>
        </div>
        
        <div class="promo-code">
          <input type="text" id="discount-code" placeholder="Promo code">
          <button onclick="applyDiscount()">Apply</button>
        </div>
        
        <div class="cart-total">
          <span>Total</span>
          <span>{{ cart.total_price | money }}</span>
        </div>
        
        <button onclick="window.location.href='/checkout'" class="checkout-button">
          Proceed to Checkout
        </button>
        
        <div class="secure-checkout">
          <span class="secure-icon">ðŸ”’</span>
          Secure checkout
        </div>
      </div>
    </div>
  </div>
{% else %}
  <div class="empty-cart">
    <h1>Your cart is empty</h1>
    <p>Looks like you haven't added anything yet.</p>
    <a href="/collections/all" class="continue-shopping">Continue Shopping</a>
  </div>
{% endif %}

<style>
  .cart-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .cart-container h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    background: linear-gradient(45deg, #FFD700, #FFA500);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .cart-content {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 2rem;
  }

  .cart-items {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .cart-item {
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 1.5rem;
    padding: 1.5rem;
    background: rgba(45, 27, 48, 0.3);
    border-radius: 15px;
    align-items: center;
  }

  .item-image {
    width: 100px;
    height: 100px;
    border-radius: 8px;
    overflow: hidden;
  }

  .item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .item-details h2 {
    font-size: 1.2rem;
    margin: 0 0 0.5rem 0;
    color: var(--accent-color);
  }

  .variant {
    color: #888;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .item-controls {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .quantity-controls {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .quantity-controls button {
    width: 30px;
    height: 30px;
    border: none;
    border-radius: 50%;
    background: var(--accent-color);
    color: var(--primary-color);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
  }

  .quantity-controls input {
    width: 50px;
    text-align: center;
    border: 1px solid var(--accent-color);
    background: rgba(45, 27, 48, 0.3);
    color: var(--text-color);
    padding: 0.5rem;
    border-radius: 8px;
  }

  .remove-item {
    background: none;
    border: none;
    color: #888;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.3s ease;
  }

  .remove-item:hover {
    color: #ff4444;
  }

  .remove-icon {
    font-size: 1.5rem;
  }

  .item-price {
    text-align: right;
  }

  .price {
    font-size: 1.2rem;
    color: var(--accent-color);
  }

  .original-price {
    color: #888;
    text-decoration: line-through;
    font-size: 0.9rem;
  }

  .cart-summary {
    background: rgba(45, 27, 48, 0.3);
    padding: 2rem;
    border-radius: 15px;
    position: sticky;
    top: 2rem;
  }

  .cart-summary h2 {
    color: var(--accent-color);
    margin-bottom: 1.5rem;
  }

  .summary-details {
    margin-bottom: 1.5rem;
  }

  .summary-line {
    display: flex;
    justify-content: space-between;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .discount {
    color: #4CAF50;
  }

  .shipping {
    color: #888;
  }

  .promo-code {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .promo-code input {
    flex: 1;
    padding: 0.8rem;
    background: rgba(45, 27, 48, 0.3);
    border: 1px solid var(--accent-color);
    border-radius: 8px;
    color: var(--text-color);
  }

  .promo-code button {
    padding: 0.8rem 1.5rem;
    background: var(--accent-color);
    border: none;
    border-radius: 8px;
    color: var(--primary-color);
    cursor: pointer;
  }

  .cart-total {
    display: flex;
    justify-content: space-between;
    font-size: 1.5rem;
    font-weight: bold;
    margin: 1.5rem 0;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--accent-color);
  }

  .checkout-button {
    width: 100%;
    padding: 1rem;
    background: linear-gradient(45deg, #FFD700, #FFA500);
    border: none;
    border-radius: 30px;
    color: var(--primary-color);
    font-weight: bold;
    font-size: 1.1rem;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .checkout-button:hover {
    transform: scale(1.02);
  }

  .secure-checkout {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 1rem;
    color: #888;
    font-size: 0.9rem;
  }

  .empty-cart {
    text-align: center;
    padding: 4rem 2rem;
  }

  .empty-cart h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(45deg, #FFD700, #FFA500);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .empty-cart p {
    color: #888;
    margin-bottom: 2rem;
  }

  .continue-shopping {
    display: inline-block;
    padding: 1rem 2rem;
    background: linear-gradient(45deg, #FFD700, #FFA500);
    color: var(--primary-color);
    text-decoration: none;
    border-radius: 30px;
    font-weight: bold;
    transition: transform 0.3s ease;
  }

  .continue-shopping:hover {
    transform: scale(1.05);
  }

  @media (max-width: 968px) {
    .cart-content {
      grid-template-columns: 1fr;
    }

    .cart-summary {
      position: static;
    }
  }

  @media (max-width: 568px) {
    .cart-item {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .item-image {
      margin: 0 auto;
    }

    .item-controls {
      justify-content: center;
    }

    .item-price {
      text-align: center;
    }
  }
</style>

<script>
  function updateQuantity(itemId, newQuantity) {
    fetch('/cart/change.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({
        id: itemId,
        quantity: parseInt(newQuantity)
      })
    })
    .then(response => response.json())
    .then(cart => {
      location.reload();
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Error updating cart');
    });
  }

  function removeItem(itemId) {
    const itemElement = document.querySelector(`[data-item-id="${itemId}"]`);
    itemElement.style.animation = 'slideOut 0.3s ease forwards';
    
    setTimeout(() => {
      updateQuantity(itemId, 0);
    }, 300);
  }

  function applyDiscount() {
    const code = document.getElementById('discount-code').value;
    
    fetch('/discount/' + code, {
      method: 'POST'
    })
    .then(() => {
      location.reload();
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Error applying discount code');
    });
  }
</script>

<style>
  @keyframes slideOut {
    to {
      transform: translateX(100%);
      opacity: 0;
    }
  }
</style> 