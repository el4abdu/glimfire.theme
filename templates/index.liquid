<!-- Hero Section -->
<div class="hero">
  <div class="hero-content">
    <h1>LUXURY IN EVERY SPARK</h1>
    <p>Discover our exceptional collection of premium lighters crafted for the modern spirit</p>
    <div class="hero-buttons">
      <a href="/collections/all" class="cta-button primary">Shop Now</a>
      <a href="/pages/about" class="cta-button secondary">Learn More</a>
    </div>
  </div>
  <div class="hero-background">
    <video autoplay loop muted playsinline class="hero-video">
      <source src="{{ 'hero-flame.mp4' | asset_url }}" type="video/mp4">
    </video>
  </div>
</div>

<!-- Collection Categories -->
<div class="categories">
  <h2>The Art of Fire ðŸ”¥</h2>
  <div class="categories-grid">
    {% for collection in collections limit: 3 %}
      <a href="{{ collection.url }}" class="category-card">
        <div class="category-image">
          <img src="{{ collection.image | img_url: '600x' }}" alt="{{ collection.title }}">
        </div>
        <div class="category-info">
          <h3>{{ collection.title }}</h3>
          <span class="category-link">Explore Collection â†’</span>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

<!-- Featured Products -->
<div class="featured-products">
  <h2>Featured Collection</h2>
  <div class="product-grid">
    {% for product in collections.featured.products limit: 8 %}
      <div class="product-card">
        <div class="product-image">
          <img src="{{ product.featured_image | img_url: '500x' }}" alt="{{ product.title }}" loading="lazy">
          {% if product.available %}
            <div class="quick-add-overlay">
              <button onclick="quickAdd('{{ product.variants.first.id }}')" class="quick-add-btn">Quick Add</button>
            </div>
          {% else %}
            <div class="sold-out-overlay">
              <span>Sold Out</span>
            </div>
          {% endif %}
        </div>
        <a href="{{ product.url }}" class="product-info">
          <h3>{{ product.title }}</h3>
          <div class="price-rating">
            <p class="price">{{ product.price | money }}</p>
            <div class="rating">
              <span class="stars">â˜…â˜…â˜…â˜…â˜…</span>
              <span class="count">({{ product.metafields.reviews.rating_count | default: 5 }})</span>
            </div>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

<!-- Customer Reviews -->
<div class="reviews-section">
  <h2>What Our Customers Say</h2>
  <div class="reviews-grid">
    {% for i in (1..6) %}
      <div class="review-card">
        <div class="review-header">
          <img src="{{ 'user-avatar.png' | asset_url }}" alt="Customer" class="review-avatar">
          <div class="review-meta">
            <h4>Happy Customer</h4>
            <div class="stars">â˜…â˜…â˜…â˜…â˜…</div>
          </div>
        </div>
        <p class="review-text">"Love this sick coolest lighter! Fast shipping, all came well packaged and working!"</p>
      </div>
    {% endfor %}
  </div>
</div>

<!-- Instagram Feed -->
<div class="instagram-section">
  <h2>Follow Us on Instagram</h2>
  <div class="instagram-grid">
    {% for i in (1..6) %}
      <div class="instagram-item">
        <img src="{{ 'instagram-' | append: i | append: '.jpg' | asset_url }}" alt="Instagram post">
        <div class="instagram-overlay">
          <span class="instagram-icon">ðŸ“¸</span>
        </div>
      </div>
    {% endfor %}
  </div>
  <a href="https://instagram.com" class="instagram-link" target="_blank">@glimfire</a>
</div>

