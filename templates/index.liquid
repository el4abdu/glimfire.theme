<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Existing code from before
    // Parallax effect for the hero section
    const hero = document.querySelector('.hero');
    const heroContent = document.querySelector('.hero-content');
    
    window.addEventListener('scroll', function() {
      const scrollPosition = window.scrollY;
      const opacity = Math.max(0, Math.min(1, 1 - scrollPosition / 700));
      
      if (hero) {
        hero.style.opacity = opacity.toString();
        heroContent.style.transform = `translateY(${scrollPosition * 0.2}px)`;
      }
    });
    
    // Animation for category cards on scroll
    const cards = document.querySelectorAll('.category-card');
    const productCards = document.querySelectorAll('.product-card');
    const reviewCards = document.querySelectorAll('.review-card');
    const instagramItems = document.querySelectorAll('.instagram-item');
    const pushFeatures = document.querySelectorAll('.push-feature');
    const pushDevice = document.querySelector('.push-device');
    const subscriptionForm = document.querySelector('.subscription-form');
    
    function isInViewport(element) {
      const rect = element.getBoundingClientRect();
      return (
        rect.top <= (window.innerHeight || document.documentElement.clientHeight) * 0.8 &&
        rect.bottom >= 0
      );
    }
    
    function checkVisibility() {
      cards.forEach((card, index) => {
        if (isInViewport(card)) {
          setTimeout(() => {
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
          }, index * 150);
        }
      });
      
      productCards.forEach((card, index) => {
        if (isInViewport(card)) {
          setTimeout(() => {
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
          }, index * 100);
        }
      });
      
      reviewCards.forEach((card, index) => {
        if (isInViewport(card)) {
          setTimeout(() => {
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
          }, index * 100);
        }
      });
      
      instagramItems.forEach((item, index) => {
        if (isInViewport(item)) {
          setTimeout(() => {
            item.style.opacity = '1';
            item.style.transform = 'translateY(0)';
          }, index * 80);
        }
      });
      
      // Add animation for push features
      pushFeatures.forEach((feature, index) => {
        if (isInViewport(feature)) {
          setTimeout(() => {
            feature.style.opacity = '1';
            feature.style.transform = 'translateY(0)';
          }, index * 150);
        }
      });
      
      // Add animation for push device and form
      if (pushDevice && isInViewport(pushDevice)) {
        pushDevice.classList.add('animate');
      }
      
      if (subscriptionForm && isInViewport(subscriptionForm)) {
        subscriptionForm.classList.add('animate');
      }
    }
    
    // Set initial state for animation
    cards.forEach(card => {
      card.style.opacity = '0';
      card.style.transform = 'translateY(40px)';
      card.style.transition = 'all 0.8s cubic-bezier(0.23, 1, 0.32, 1)';
    });
    
    productCards.forEach(card => {
      card.style.opacity = '0';
      card.style.transform = 'translateY(40px)';
      card.style.transition = 'all 0.8s cubic-bezier(0.23, 1, 0.32, 1)';
    });
    
    reviewCards.forEach(card => {
      card.style.opacity = '0';
      card.style.transform = 'translateY(40px)';
      card.style.transition = 'all 0.8s cubic-bezier(0.23, 1, 0.32, 1)';
    });
    
    instagramItems.forEach(item => {
      item.style.opacity = '0';
      item.style.transform = 'translateY(40px)';
      item.style.transition = 'all 0.8s cubic-bezier(0.23, 1, 0.32, 1)';
    });
    
    // Set transition for push features
    pushFeatures.forEach(feature => {
      feature.style.transition = 'all 0.8s cubic-bezier(0.23, 1, 0.32, 1)';
    });
    
    window.addEventListener('scroll', checkVisibility);
    // Initial check
    checkVisibility();
    
    // Create the notification animation loop
    const deviceNotification = document.querySelector('.device-notification');
    if (deviceNotification) {
      // Notification animation every 6 seconds
      setInterval(() => {
        deviceNotification.style.animation = 'none';
        setTimeout(() => {
          deviceNotification.style.animation = 'notifyPop 0.5s cubic-bezier(0.23, 1, 0.32, 1) forwards';
        }, 10);
      }, 6000);
    }
  });
  
