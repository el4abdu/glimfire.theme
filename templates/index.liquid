<!-- Hero Section -->
<div class="hero">
  <div class="hero-content">
    <span class="hero-badge">2025 Collection</span>
    <h1>LUXURY IN EVERY SPARK</h1>
    <p>Discover our exceptional collection of premium lighters crafted for the modern spirit</p>
    <div class="hero-buttons">
      <a href="/collections/all" class="cta-button primary">Shop Now</a>
      <a href="/pages/about" class="cta-button secondary">Learn More</a>
    </div>
  </div>
  <div class="hero-background">
    <video autoplay loop muted playsinline class="hero-video">
      <source src="{{ 'hero-flame.mp4' | asset_url }}" type="video/mp4">
    </video>
    <div class="hero-overlay"></div>
  </div>
  <div class="hero-scroll-indicator">
    <div class="scroll-icon">
      <svg width="24" height="36" viewBox="0 0 24 36" fill="none" xmlns="http://www.w3.org/2000/svg">
        <rect x="1" y="1" width="22" height="34" rx="11" stroke="white" stroke-width="2"/>
        <circle class="scroll-dot" cx="12" cy="10" r="4" fill="white"/>
      </svg>
    </div>
    <span>Scroll to Explore</span>
  </div>
</div>

<!-- Collection Categories -->
<div class="categories">
  <h2>The Art of Fire <span class="emoji-flame">ðŸ”¥</span></h2>
  <div class="categories-grid">
    {% for collection in collections limit: 3 %}
      <a href="{{ collection.url }}" class="category-card">
        <div class="category-image">
          <img src="{{ collection.image | img_url: '800x800', crop: 'center' }}" alt="{{ collection.title }}">
        </div>
        <div class="category-info">
          <h3>{{ collection.title }}</h3>
          <span class="category-link">Explore Collection â†’</span>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

<!-- Featured Products -->
<div class="featured-products">
  <div class="section-header">
    <h2>Featured Collection</h2>
    <div class="section-badge">2025 Editions</div>
  </div>
  <div class="product-grid">
    {% for product in collections.featured.products limit: 8 %}
      <div class="product-card">
        <div class="product-image">
          <img src="{{ product.featured_image | img_url: '600x600', crop: 'center' }}" alt="{{ product.title }}" loading="lazy">
          {% if product.available %}
            <div class="quick-add-overlay">
              <button onclick="quickAdd('{{ product.variants.first.id }}')" class="quick-add-btn">
                <span class="btn-icon">+</span>
                <span>Quick Add</span>
              </button>
            </div>
          {% else %}
            <div class="sold-out-overlay">
              <span>Sold Out</span>
            </div>
          {% endif %}
        </div>
        <a href="{{ product.url }}" class="product-info">
          <h3>{{ product.title }}</h3>
          <div class="price-rating">
            <p class="price">{{ product.price | money }}</p>
            <div class="rating">
              <span class="stars">â˜…â˜…â˜…â˜…â˜…</span>
              <span class="count">({{ product.metafields.reviews.rating_count | default: 5 }})</span>
            </div>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

