<style>
  .hero {
    height: 100vh;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    overflow: hidden;
  }

  .hero-badge {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background: rgba(255, 215, 0, 0.2);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 215, 0, 0.5);
    border-radius: 30px;
    color: #FFD700;
    font-weight: 600;
    letter-spacing: 1px;
    text-transform: uppercase;
    font-size: 0.9rem;
    margin-bottom: 2rem;
    animation: pulse 3s infinite alternate;
  }

  @keyframes pulse {
    0% { box-shadow: 0 0 10px rgba(255, 215, 0, 0.3); }
    100% { box-shadow: 0 0 20px rgba(255, 215, 0, 0.6); }
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at center, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.8) 100%);
    z-index: 1;
  }

  .hero-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.7) contrast(1.2);
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    padding: 2rem;
    z-index: 2;
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    background: rgba(0, 0, 0, 0.2);
    border-radius: 30px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
  }

  .hero h1 {
    font-size: 5rem;
    margin-bottom: 1.5rem;
    background: linear-gradient(45deg, #FFD700, #FFA500, #FF8C00);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 800;
    animation: textShimmer 5s infinite linear;
    background-size: 300% auto;
  }

  @keyframes textShimmer {
    0% { background-position: 0% center; }
    100% { background-position: 300% center; }
  }

  .hero p {
    font-size: 1.5rem;
    margin-bottom: 2.5rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
  }

  .hero-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }

  .cta-button {
    padding: 1.2rem 2.8rem;
    border-radius: 40px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    position: relative;
    overflow: hidden;
    z-index: 1;
  }

  .cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, rgba(255, 215, 0, 0.2), rgba(255, 165, 0, 0.2));
    z-index: -1;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .cta-button:hover::before {
    transform: scaleX(1);
    transform-origin: left;
  }

  .cta-button.primary {
    background: linear-gradient(45deg, #FFD700, #FFA500);
    color: var(--primary-color);
    text-decoration: none;
    box-shadow: 0 5px 15px rgba(255, 215, 0, 0.3);
  }

  .cta-button.secondary {
    background: transparent;
    border: 2px solid #FFD700;
    color: #FFD700;
    text-decoration: none;
  }

  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(255, 215, 0, 0.4);
  }

  .hero-scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    opacity: 0.7;
    transition: opacity 0.3s ease;
    z-index: 5;
    animation: bounce 2s infinite;
  }

  .hero-scroll-indicator:hover {
    opacity: 1;
  }

  .hero-scroll-indicator span {
    font-size: 0.9rem;
    letter-spacing: 1px;
    font-weight: 300;
  }

  .scroll-dot {
    animation: scrollDot 2s infinite;
  }

  @keyframes scrollDot {
    0% { transform: translateY(0); }
    50% { transform: translateY(8px); }
    100% { transform: translateY(0); }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0) translateX(-50%); }
    40% { transform: translateY(-10px) translateX(-50%); }
    60% { transform: translateY(-5px) translateX(-50%); }
  }

  .categories {
    padding: 8rem 2rem;
    position: relative;
    overflow: hidden;
  }

  .categories::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, rgba(0,0,0,0.8) 0%, rgba(30,20,40,0.4) 50%, rgba(0,0,0,0.8) 100%);
    z-index: -1;
  }

  .categories h2 {
    text-align: center;
    font-size: 3.5rem;
    margin-bottom: 3rem;
    background: linear-gradient(45deg, #FFD700, #FFA500);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
  }

  .emoji-flame {
    display: inline-block;
    animation: flicker 3s infinite alternate;
    transform-origin: center;
    margin-left: 0.5rem;
  }

  @keyframes flicker {
    0%, 18%, 22%, 25%, 53%, 57%, 100% { transform: scale(1); }
    20%, 55% { transform: scale(1.2); }
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .category-card {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    aspect-ratio: 1 / 1.2;
    text-decoration: none;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
    transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .category-card:hover {
    transform: translateY(-15px) scale(1.02);
  }

  .category-image {
    width: 100%;
    height: 100%;
  }

  .category-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.9s cubic-bezier(0.23, 1, 0.32, 1);
    filter: brightness(0.8);
  }

  .category-card:hover .category-image img {
    transform: scale(1.15);
    filter: brightness(1);
  }

  .category-info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 3rem 2rem 2rem;
    background: linear-gradient(transparent, rgba(0,0,0,0.9));
