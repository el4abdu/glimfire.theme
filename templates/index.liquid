  function subscribeToPush() {
    const emailInput = document.querySelector('.push-input');
    const email = emailInput ? emailInput.value : '';
    
    if (!email || !email.includes('@')) {
      // Show error notification
      const notification = document.createElement('div');
      notification.className = 'notification';
      notification.style.background = 'rgba(220, 53, 69, 0.9)';
      notification.innerHTML = `
        <div class="notification-icon" style="background: #dc3545">!</div>
        <div class="notification-content">
          <div class="notification-title">Error</div>
          <div class="notification-message">Please enter a valid email address</div>
        </div>
      `;
      document.body.appendChild(notification);
      
      setTimeout(() => {
        notification.classList.add('notification-hide');
        setTimeout(() => {
          notification.remove();
        }, 300);
      }, 3000);
      
      return;
    }
    
    // Show success notification
    const notification = document.createElement('div');
    notification.className = 'notification';
    notification.innerHTML = `
      <div class="notification-icon">âœ“</div>
      <div class="notification-content">
        <div class="notification-title">Subscription Successful!</div>
        <div class="notification-message">You'll receive push notifications for special offers</div>
      </div>
    `;
    document.body.appendChild(notification);
    
    // Clear input
    if (emailInput) {
      emailInput.value = '';
    }
    
    setTimeout(() => {
      notification.classList.add('notification-hide');
      setTimeout(() => {
        notification.remove();
      }, 300);
    }, 3000);
  }
</script> 