    content: '';
    position: absolute;
    bottom: -30%;
    left: -30%;
    width: 80%;
    height: 80%;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(255, 165, 0, 0.1) 0%, transparent 70%);
    animation: moveCircle2 25s infinite alternate-reverse ease-in-out;
